<h1><%= @performance.description %></h1>

<div class="container">
  <h2>Book</h2>


  <%= simple_form_for [@performance, @booking] do |f| %>
    <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :location %>
    <%= f.input :work_asked %>
    <%= f.button :submit %>
  <% end %>
</div>
