<div class="container">


  <%= image_tag @user.avatar, alt: "Avatar", width: 50 %>
  <h1> <%= @user.username %> </h1>


  <div class="wrapper-edit">
    <h2> My Bio </h2>
    <p> <%= @user.bio %> </p>
    <%= link_to "Edit Bio", "#", class: "edit-btn" %>
  </div>

  <div class="wrapper-edit container-fluid">
    <h2> My Perfs</h2>
    <div class="row">
      <%  @user.performances.each do |performance|%>
        <div class="card-performance">
          <h3> <%=  performance.description %> </h3>
          <%= link_to "Edit Performance", "#", class: "edit-btn" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="wrapper-edit">
    <h2> My Photos</h2>
    <% @user.photos.each do |photo|%>
      <%= image_tag photo, alt: "Artists Photos", width: 200 %>
      <%= link_to "Delete Picture", "#", class: "edit-btn" %>
    <% end %>
  </div>
</div>

